<body>
    <div class="container">
        <h1>ðŸ¤Ÿ ASL Learning App</h1>
        <p class="subtitle">Practice American Sign Language for everyday communication</p>
        
        <div class="info-box">
            ðŸ“Œ <strong>Note:</strong> This app uses simplified gesture detection. For best results, make clear, deliberate signs with good lighting.
        </div>
        
        <div class="stats">
            <div class="stat">
                <div class="stat-value" id="score">0</div>
                <div class="stat-label">Correct Signs</div>
            </div>
            <div class="stat">
                <div class="stat-value" id="attempts">0</div>
                <div class="stat-label">Total Attempts</div>
            </div>
        </div>
        
        <div class="camera-container">
            <video id="video" autoplay playsinline></video>
            <canvas id="canvas"></canvas>
        </div>
        
        <div class="controls">
            <button id="startBtn">Start Camera</button>
            <button id="stopBtn" class="hidden">Stop Camera</button>
        </div>
        
        <div id="feedback" class="feedback waiting">
            Select a sign below to practice
        </div>
        
        <div class="tabs">
            <button class="tab active" data-tab="basics">Daily Basics</button>
            <button class="tab" data-tab="alphabet">Alphabet</button>
            <button class="tab" data-tab="numbers">Numbers</button>
        </div>
        
        <div id="basics" class="tab-content active">
            <div class="section-title">Essential Daily Signs</div>
            <div class="sign-library" id="basicsLibrary"></div>
        </div>
        
        <div id="alphabet" class="tab-content">
            <div class="section-title">ASL Fingerspelling Alphabet</div>
            <div class="sign-library" id="alphabetLibrary"></div>
        </div>
        
        <div id="numbers" class="tab-content">
            <div class="section-title">Numbers 0-10</div>
            <div class="sign-library" id="numbersLibrary"></div>
        </div>
        
        <div id="loading" class="loading hidden">Loading hand tracking model...</div>
    </div>

    <script>
        // Verified ASL signs based on official sources
        const basicSigns = [
            { name: 'Hello', emoji: 'ðŸ‘‹', id: 'hello', desc: 'Open hand salute from forehead' },
            { name: 'Thank You', emoji: 'ðŸ™', id: 'thanks', desc: 'Flat hand from chin, move forward' },
            { name: 'Please', emoji: 'âœ‹', id: 'please', desc: 'Flat hand, circle on chest' },
            { name: 'Yes', emoji: 'âœŠ', id: 'yes', desc: 'Fist nods like head nodding' },
            { name: 'No', emoji: 'âœŒï¸', id: 'no', desc: 'Index+middle tap thumb' },
            { name: 'Help', emoji: 'ðŸ†˜', id: 'help', desc: 'Thumbs up lifted by other hand' },
            { name: 'Sorry', emoji: 'ðŸ˜”', id: 'sorry', desc: 'Fist circles on chest' },
            { name: 'Water', emoji: 'ðŸ’§', id: 'water', desc: 'W-shape taps chin/mouth' },
            { name: 'Bathroom', emoji: 'ðŸš»', id: 'bathroom', desc: 'T-shape shakes side to side' },
            { name: 'I Love You', emoji: 'ðŸ¤Ÿ', id: 'ily', desc: 'Thumb, index & pinky up' }
        ];
        
        const alphabetSigns = [
            { name: 'A', emoji: 'A', id: 'a', desc: 'Fist with thumb on side' },
            { name: 'B', emoji: 'B', id: 'b', desc: 'Flat hand, thumb across palm' },
            { name: 'C', emoji: 'C', id: 'c', desc: 'Curved hand like letter C' },
            { name: 'D', emoji: 'D', id: 'd', desc: 'Index up, others touch thumb' },
            { name: 'E', emoji: 'E', id: 'e', desc: 'Fingers curl down to thumb' },
            { name: 'F', emoji: 'F', id: 'f', desc: 'Index+thumb touch, 3 up' },
            { name: 'G', emoji: 'G', id: 'g', desc: 'Index+thumb point sideways' },
            { name: 'H', emoji: 'H', id: 'h', desc: 'Index+middle sideways' },
            { name: 'I', emoji: 'I', id: 'i', desc: 'Pinky up only' },
            { name: 'K', emoji: 'K', id: 'k', desc: 'Index+middle up, thumb out' },
            { name: 'L', emoji: 'L', id: 'l', desc: 'L-shape: thumb+index' },
            { name: 'O', emoji: 'O', id: 'o', desc: 'Fingers+thumb form O' },
            { name: 'S', emoji: 'S', id: 's', desc: 'Fist with thumb over fingers' },
            { name: 'U', emoji: 'U', id: 'u', desc: 'Index+middle up together' },
            { name: 'V', emoji: 'V', id: 'v', desc: 'Index+middle spread (peace)' },
            { name: 'W', emoji: 'W', id: 'w', desc: 'Index+middle+ring spread' },
            { name: 'Y', emoji: 'Y', id: 'y', desc: 'Thumb+pinky extended' }
        ];
        
        const numberSigns = [
            { name: '0', emoji: '0ï¸âƒ£', id: 'zero', desc: 'O-shape with fingers' },
            { name: '1', emoji: '1ï¸âƒ£', id: 'one', desc: 'Index finger up only' },
            { name: '2', emoji: '2ï¸âƒ£', id: 'two', desc: 'Index+middle up (V shape)' },
            { name: '3', emoji: '3ï¸âƒ£', id: 'three', desc: 'Thumb+index+middle up' },
            { name: '4', emoji: '4ï¸âƒ£', id: 'four', desc: '4 fingers up (no thumb)' },
            { name: '5', emoji: '5ï¸âƒ£', id: 'five', desc: 'All 5 fingers spread open' },
            { name: '6', emoji: '6ï¸âƒ£', id: 'six', desc: 'Thumb+pinky touch' },
            { name: '7', emoji: '7ï¸âƒ£', id: 'seven', desc: 'Thumb+ring touch' },
            { name: '8', emoji: '8ï¸âƒ£', id: 'eight', desc: 'Thumb+middle touch' },
            { name: '9', emoji: '9ï¸âƒ£', id: 'nine', desc: 'Thumb+index touch' },
            { name: '10', emoji: 'ðŸ”Ÿ', id: 'ten', desc: 'Thumbs up, shake side to side' }
        ];
        
        let hands, camera;
        let currentSign = null;
        let score = 0;
        let attempts = 0;
        let lastDetection = null;
        
        const video = document.getElementById('video');
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        const startBtn = document.getElementById('startBtn');
        const stopBtn = document.getElementById('stopBtn');
        const feedback = document.getElementById('feedback');
        const loading = document.getElementById('loading');
        
        function renderLibrary(containerId, signs) {
            const container = document.getElementById(containerId);
            signs.forEach(sign => {
                const card = document.createElement('div');
                card.className = 'sign-card';
                card.innerHTML = `
                    <div class="sign-emoji">${sign.emoji}</div>
                    <div class="sign-name">${sign.name}</div>
                    <div class="sign-description">${sign.desc}</div>
                `;
                card.onclick = () => selectSign(sign, card);
                container.appendChild(card);
            });
        }
        
        renderLibrary('basicsLibrary', basicSigns);
        renderLibrary('alphabetLibrary', alphabetSigns);
        renderLibrary('numbersLibrary', numberSigns);
        
        document.querySelectorAll('.tab').forEach(tab => {
            tab.onclick = () => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                tab.classList.add('active');
                document.getElementById(tab.dataset.tab).classList.add('active');
            };
        });
        
        function selectSign(sign, element) {
            currentSign = sign;
            document.querySelectorAll('.sign-card').forEach(c => c.classList.remove('active'));
            element.classList.add('active');
            feedback.className = 'feedback waiting';
            feedback.textContent = `Practice: "${sign.name}" - ${sign.desc}`;
        }
        
        function updateStats() {
            document.getElementById('score').textContent = score;
            document.getElementById('attempts').textContent = attempts;
        }
        
        function getDistance(p1, p2) {
            return Math.sqrt(Math.pow(p1.x - p2.x, 2) + Math.pow(p1.y - p2.y, 2) + Math.pow(p1.z - p2.z, 2));
        }
        
        function isFingerExtended(landmarks, fingerTip, fingerPip) {
            return landmarks[fingerTip].y < landmarks[fingerPip].y - 0.03;
        }
        
        function isThumbExtended(landmarks) {
            return landmarks[4].x < landmarks[3].x - 0.05 || landmarks[4].x > landmarks[3].x + 0.05;
        }
        
        function detectGesture(landmarks) {
            if (!landmarks || !currentSign) return null;
            
            // Finger indices: thumb=4, index=8, middle=12, ring=16, pinky=20
            // PIP joints: thumb=2, index=6, middle=10, ring=14, pinky=18
            
            const thumbExt = isThumbExtended(landmarks);
            const indexExt = isFingerExtended(landmarks, 8, 6);
            const middleExt = isFingerExtended(landmarks, 12, 10);
            const ringExt = isFingerExtended(landmarks, 16, 14);
            const pinkyExt = isFingerExtended(landmarks, 20, 18);
            
            const extendedCount = [thumbExt, indexExt, middleExt, ringExt, pinkyExt].filter(Boolean).length;
            
            // Distance measurements for specific signs
            const thumbIndexDist = getDistance(landmarks[4], landmarks[8]);
            const thumbMiddleDist = getDistance(landmarks[4], landmarks[12]);
            const thumbRingDist = getDistance(landmarks[4], landmarks[16]);
            const thumbPinkyDist = getDistance(landmarks[4], landmarks[20]);
            const indexMiddleDist = getDistance(landmarks[8], landmarks[12]);
            
            const patterns = {
                // Basic signs - simplified detection
                'hello': extendedCount >= 4,
                'thanks': extendedCount >= 4,
                'please': extendedCount >= 4,
                'yes': !indexExt && !middleExt && !ringExt && !pinkyExt,
                'no': indexExt && middleExt && !ringExt && !pinkyExt,
                'help': thumbExt && !indexExt && !middleExt && !ringExt && !pinkyExt,
                'sorry': !indexExt && !middleExt && !ringExt && !pinkyExt,
                'water': indexExt && middleExt && ringExt && !pinkyExt,
                'bathroom': thumbExt && indexExt && !middleExt && !ringExt && !pinkyExt,
                'ily': thumbExt && indexExt && !middleExt && !ringExt && pinkyExt,
                
                // Alphabet - refined
                'a': !indexExt && !middleExt && !ringExt && !pinkyExt && thumbExt,
                'b': indexExt && middleExt && ringExt && pinkyExt && !thumbExt,
                'c': extendedCount >= 3 && landmarks[8].x < landmarks[4].x,
                'd': indexExt && !middleExt && !ringExt && !pinkyExt && !thumbExt,
                'e': !indexExt && !middleExt && !ringExt && !pinkyExt && !thumbExt && landmarks[8].y > landmarks[6].y,
                'f': thumbIndexDist < 0.05 && middleExt && ringExt && pinkyExt,
                'g': thumbExt && indexExt && !middleExt && !ringExt && !pinkyExt && landmarks[8].y < landmarks[4].y,
                'h': indexExt && middleExt && !ringExt && !pinkyExt && !thumbExt && indexMiddleDist < 0.03,
                'i': pinkyExt && !indexExt && !middleExt && !ringExt && !thumbExt,
                'k': thumbExt && indexExt && middleExt && !ringExt && !pinkyExt,
                'l': thumbExt && indexExt && !middleExt && !ringExt && !pinkyExt && landmarks[8].y < landmarks[4].y,
                'o': thumbIndexDist < 0.06 && !middleExt && !ringExt && !pinkyExt,
                's': !indexExt && !middleExt && !ringExt && !pinkyExt && !thumbExt,
                'u': indexExt && middleExt && !ringExt && !pinkyExt && indexMiddleDist < 0.03,
                'v': indexExt && middleExt && !ringExt && !pinkyExt && indexMiddleDist > 0.05,
                'w': indexExt && middleExt && ringExt && !pinkyExt,
                'y': thumbExt && !indexExt && !middleExt && !ringExt && pinkyExt,
                
                // Numbers
                'zero': thumbIndexDist < 0.06 && !middleExt && !ringExt,
                'one': indexExt && !middleExt && !ringExt && !pinkyExt && !thumbExt,
                'two': indexExt && middleExt && !ringExt && !pinkyExt,
                'three': thumbExt && indexExt && middleExt && !ringExt && !pinkyExt,
                'four': indexExt && middleExt && ringExt && pinkyExt && !thumbExt,
                'five': extendedCount === 5,
                'six': thumbPinkyDist < 0.08 && indexExt && middleExt && ringExt,
                'seven': thumbRingDist < 0.08 && indexExt && middleExt && pinkyExt,
                'eight': thumbMiddleDist < 0.08 && indexExt && ringExt && pinkyExt,
                'nine': thumbIndexDist < 0.08 && middleExt && ringExt && pinkyExt,
                'ten': thumbExt && !indexExt && !middleExt && !ringExt && !pinkyExt
            };
            
            return patterns[currentSign.id] ? currentSign.id : null;
        }
        
        function onResults(results) {
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            
            ctx.save();
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            if (results.multiHandLandmarks && results.multiHandLandmarks.length > 0) {
                for (const landmarks of results.multiHandLandmarks) {
                    drawConnectors(ctx, landmarks, HAND_CONNECTIONS, {color: '#00FF00', lineWidth: 2});
                    drawLandmarks(ctx, landmarks, {color: '#FF0000', lineWidth: 1});
                    
                    const detected = detectGesture(landmarks);
                    
                    if (detected && detected === currentSign.id) {
                        const now = Date.now();
                        if (!lastDetection || now - lastDetection > 2000) {
                            score++;
                            attempts++;
                            lastDetection = now;
                            updateStats();
                            
                            feedback.className = 'feedback success';
                            feedback.textContent = `âœ… Perfect "${currentSign.name}"! Well done!`;
                            
                            setTimeout(() => {
                                if (currentSign) {
                                    feedback.className = 'feedback waiting';
                                    feedback.textContent = `Practice: "${currentSign.name}" - ${currentSign.desc}`;
                                }
                            }, 2000);
                        }
                    }
                }
            }
            
            ctx.restore();
        }
        
        function drawConnectors(ctx, landmarks, connections, style) {
            ctx.strokeStyle = style.color;
            ctx.lineWidth = style.lineWidth;
            
            connections.forEach(([start, end]) => {
                const startPoint = landmarks[start];
                const endPoint = landmarks[end];
                
                ctx.beginPath();
                ctx.moveTo(startPoint.x * canvas.width, startPoint.y * canvas.height);
                ctx.lineTo(endPoint.x * canvas.width, endPoint.y * canvas.height);
                ctx.stroke();
            });
        }
        
        function drawLandmarks(ctx, landmarks, style) {
            ctx.fillStyle = style.color;
            
            landmarks.forEach(point => {
                ctx.beginPath();
                ctx.arc(point.x * canvas.width, point.y * canvas.height, 3, 0, 2 * Math.PI);
                ctx.fill();
            });
        }
        
        const HAND_CONNECTIONS = [
            [0,1],[1,2],[2,3],[3,4],
            [0,5],[5,6],[6,7],[7,8],
            [0,9],[9,10],[10,11],[11,12],
            [0,13],[13,14],[14,15],[15,16],
            [0,17],[17,18],[18,19],[19,20],
            [5,9],[9,13],[13,17]
        ];
        
        startBtn.onclick = async () => {
            loading.classList.remove('hidden');
            startBtn.disabled = true;
            
            try {
                hands = new Hands({
                    locateFile: (file) => `https://cdn.jsdelivr.net/npm/@mediapipe/hands/${file}`
                });
                
                hands.setOptions({
                    maxNumHands: 1,
                    modelComplexity: 1,
                    minDetectionConfidence: 0.7,
                    minTrackingConfidence: 0.7
                });
                
                hands.onResults(onResults);
                
                const stream = await navigator.mediaDevices.getUserMedia({
                    video: { facingMode: 'user', width: 640, height: 480 }
                });
                
                video.srcObject = stream;
                
                camera = new Camera(video, {
                    onFrame: async () => {
                        await hands.send({image: video});
                    },
                    width: 640,
                    height: 480
                });
                
                await camera.start();
                
                loading.classList.add('hidden');
                startBtn.classList.add('hidden');
                stopBtn.classList.remove('hidden');
                
            } catch (err) {
                alert('Could not access camera: ' + err.message);
                loading.classList.add('hidden');
                startBtn.disabled = false;
            }
        };
        
        stopBtn.onclick = () => {
            if (camera) camera.stop();
            if (video.srcObject) {
                video.srcObject.getTracks().forEach(track => track.stop());
            }
            stopBtn.classList.add('hidden');
            startBtn.classList.remove('hidden');
        };
    </script>
</body>
</html>
